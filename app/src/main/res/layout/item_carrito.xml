<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        android:layout_marginBottom="-6dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imgPlatilloDC"
                android:layout_width="255dp"
                android:layout_height="137dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="4dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/membresia" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginRight="19dp"

                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <TextView

                        android:id="@+id/tvNombreProductoCarrito"
                        style="@style/SecondaryTextTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="30dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="TextView"
                        android:textSize="18sp"
                        android:textStyle="bold" />



                    <TextView

                        android:id="@+id/tvUsuario"
                        android:visibility="gone"
                        style="@style/SecondaryTextTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="TextView"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <TextView

                        android:id="@+id/tvIdCarrito"
                        style="@style/SecondaryTextTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginStart="220dp"

                        android:text="1"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/btnEliminarPCarrito"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="false"
                        android:src="@drawable/ic_borrar" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom">

                    <TextView
                        android:id="@+id/holasd"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppin_regular"
                        android:text="S/"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvPrecioProductoCarrito"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="22dp"
                        android:fontFamily="@font/poppin_regular"
                        android:text="0.00"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvCantxPr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="97dp"
                        android:text="0.00"
                        android:visibility="gone"
                        android:textSize="20sp" />


                    <ImageView
                        android:id="@+id/btnDecrease"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@id/edtCantidadCarrito"
                        android:background="#F4F2F2"
                        android:src="@drawable/ic_remove_item" />

                    <EditText
                        android:id="@+id/edtCantidadCarrito"
                        android:layout_width="50dp"
                        android:layout_height="35dp"
                        android:layout_toStartOf="@id/btnAdd"
                        android:clickable="false"
                        android:editable="false"
                        android:focusable="false"
                        android:fontFamily="@font/san_francisco"
                        android:inputType="none"
                        android:text="5"
                        android:textAlignment="center"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/btnAdd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="#F4F2F2"
                        android:src="@drawable/ic_add_item" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>